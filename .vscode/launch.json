  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Run Program",
      "type": "pwa-node",
      "program": "${workspaceFolder}/app.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all"],
      "attachSimplePort": 9229,
      "args": [],
      "outputCapture": "std"
    },
    {
      "request": "launch",
      "name": "Run Current File",
      "type": "pwa-node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all"],
      "attachSimplePort": 9229,
      "args": [],
      "outputCapture": "std"
    },
    {
      "request": "launch",
      "name": "Test All",
      "type": "pwa-node",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "--inspect-brk", "--allow-all"],
      "attachSimplePort": 9229,
      "args": [],
      "outputCapture": "std"
    },
    {
      "request": "launch",
      "name": "Test Current file",
      "type": "pwa-node",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "--inspect-brk", "--allow-all"],
      "attachSimplePort": 9229,
      "args": [],
      "outputCapture": "std"
    }
  ]
}
